# MAEPLE Environment Configuration
# Copy this file to .env and fill in your actual values

# ------------------------------------------------------------------
# 1. CORE CONFIGURATION (Required)
# ------------------------------------------------------------------

# Backend API URL
# - Local Development: http://localhost:3001/api
# - Production (Vercel): https://your-backend-url.com/api
VITE_API_URL=http://localhost:3001/api

# Database Connection
# PostgreSQL database URL for backend
DATABASE_URL=postgresql://localhost:5432/maeple

# ------------------------------------------------------------------
# 2. AI SERVICES CONFIGURATION
# ------------------------------------------------------------------

# Google Gemini API (Primary - Multimodal with Vision)
# Get your API key from: https://aistudio.google.com/app/apikey
# Required for: Journal parsing, Visual Therapy, Bio-Mirror, Mae Live Coach
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Z.ai API (Advanced Code Generation & Refactoring)
# Get API key from: https://z.ai/developers
# Used for: Code generation, refactoring, AI-assisted development
ZAI_API_KEY=your_zai_api_key_here

# OpenAI API (GPT-4, DALL-E, Whisper)
# Get API key from: https://platform.openai.com/api-keys
# Used for: Advanced text analysis, image generation, speech processing
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (Claude)
# Get API key from: https://console.anthropic.com/
# Used for: Nuanced text analysis, reasoning tasks
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Perplexity API (Search + AI)
# Get API key from: https://www.perplexity.ai/settings/api
# Used for: Web search with AI-powered results
# Endpoint: https://api.perplexity.ai
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# OpenRouter API (Access to Free Models)
# Get API key from: https://openrouter.ai/keys
# Used for: Access to free/open-source models
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ElevenLabs API (Text-to-Speech)
# Get API key from: https://elevenlabs.io/app/settings/api-keys
# Used for: Natural voice synthesis for Live Coach
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Jina AI API (Reader & Search)
# Get API key from: https://jina.ai/
# Used for: Web content extraction, AI-powered search
JINA_API_KEY=your_jina_api_key_here

# ------------------------------------------------------------------
# 3. SEARCH & WEB SCRAPING
# ------------------------------------------------------------------

# Brave Search API
# Get API key from: https://api.search.brave.com/register
# Used for: Web search for MCP servers and AI research
BRAVE_API_KEY=your_brave_api_key_here

# Firecrawl API (Web Crawling & Scraping)
# Get API key from: https://www.firecrawl.dev/
# Used for: Advanced web scraping for research and documentation
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ------------------------------------------------------------------
# 4. CONTENT & MEDIA
# ------------------------------------------------------------------

# Giphy API (GIFs & Stickers)
# Get API key from: https://developers.giphy.com/
# Used for: GIF integration in journal and responses
GIFY_API_KEY=your_giphy_api_key_here

# Resend API (Email)
# Get API key from: https://resend.com/api-keys
# Used for: Email notifications (poziverse domain)
RESEND_API_KEY=your_resend_api_key_here

# ------------------------------------------------------------------
# 5. ADDITIONAL AI SERVICES
# ------------------------------------------------------------------

# Moonshot Kimi API
# Get API key from: https://platform.moonshot.cn/
# Used for: Additional AI capabilities
MOONSHOT_KIMI_API_KEY=your_moonshot_kimi_api_key_here

# GitHub Personal Access Token (Genpozi)
# Get token from: https://github.com/settings/tokens
# Used for: GitHub API access for research and integration
GITHUB_GENPOZI_TOKEN=your_github_pat_here

# ------------------------------------------------------------------
# 6. WEARABLE INTEGRATIONS (Optional)
# ------------------------------------------------------------------

# Oura Ring API
# Get credentials from: https://cloud.ouraring.com/oauth/applications
VITE_OURA_CLIENT_ID=your_oura_client_id
VITE_OURA_CLIENT_SECRET=your_oura_client_secret

# Whoop API
VITE_WHOOP_CLIENT_ID=your_whoop_client_id

# Garmin API
VITE_GARMIN_CONSUMER_KEY=your_garmin_key
VITE_GARMIN_CONSUMER_SECRET=your_garmin_secret

# Apple Health
# Requires iOS HealthKit integration - handled via Capacitor

# Fitbit API
VITE_FITBIT_CLIENT_ID=your_fitbit_client_id
VITE_FITBIT_CLIENT_SECRET=your_fitbit_client_secret

# ------------------------------------------------------------------
# 7. MCP (Model Context Protocol) CONFIGURATION
# ------------------------------------------------------------------

# MCP Settings
MCP_ENABLED=true
MCP_LOG_LEVEL=info
MCP_MAX_RETRIES=3
MCP_TIMEOUT=30000

# MCP Server Paths
MCP_FILESYSTEM_PATH=/opt/Maeple
MCP_GIT_REPOSITORY_PATH=/opt/Maeple
MCP_POSTGRES_CONNECTION_STRING=postgresql://localhost:5432/maeple

# ------------------------------------------------------------------
# 8. DEVELOPMENT SETTINGS
# ------------------------------------------------------------------

# Environment
NODE_ENV=development

# Feature Flags
FEATURE_BIO_MIRROR=true
FEATURE_LIVE_COACH=true
FEATURE_WEARABLES=true
FEATURE_AI_ANALYSIS=true

# Debug Settings
DEBUG=false
VERBOSE_LOGGING=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS_PER_MINUTE=55
RATE_LIMIT_MAX_REQUESTS_PER_DAY=1400
